# Production environment configuration for YouTube Summarizer API

# Environment
ENVIRONMENT=production
DEBUG=false
APP_NAME="YouTube Summarizer API"

# Server settings
HOST=0.0.0.0
PORT=8000

# Database settings
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=youtube_summarizer
MONGODB_MAX_CONNECTIONS=5
MONGODB_CONNECTION_TIMEOUT=5
MONGODB_IDLE_TIMEOUT=60
MONGODB_QUERY_TIMEOUT=10

# Redis settings
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10
VIDEO_METADATA_TTL=86400
TRANSCRIPT_TTL=172800
SUMMARY_TTL=259200

# API keys
GEMINI_API_KEY=
YOUTUBE_API_KEY=

# Resource limits
MAX_MEMORY_USAGE=480
MEMORY_WARNING_THRESHOLD=410
MAX_CPU_USAGE=0.09
REDIS_MAX_MEMORY=128
IN_MEMORY_CACHE_SIZE=10

# Request limits
MAX_URL_LENGTH=2048
MAX_REQUEST_PAYLOAD_KB=10
REQUEST_TIMEOUT_SECONDS=60

# Connection limits
YOUTUBE_API_MAX_CONNECTIONS=5
GEMINI_API_MAX_CONNECTIONS=3

# Rate limits
GLOBAL_RATE_LIMIT_PER_MINUTE=60
IP_RATE_LIMIT_PER_MINUTE=10

# Throttling limits
VIDEO_PROCESSING_MAX_CONCURRENT=2
AI_SUMMARIZATION_MAX_CONCURRENT=1

# Batch processing
MAX_BATCH_SIZE=5
BATCH_WINDOW_SECONDS=2

# Circuit breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_SECONDS=60
CIRCUIT_BREAKER_HALF_OPEN_SECONDS=30

# Timeout settings
HTTP_CLIENT_TIMEOUT=30
DATABASE_OPERATION_TIMEOUT=10
REDIS_OPERATION_TIMEOUT=5
YOUTUBE_API_TIMEOUT=30
GEMINI_API_TIMEOUT=60

# CORS settings
CORS_ORIGINS=https://ytsummarizer.example.com,https://app.ytsummarizer.example.com

# Monitoring settings
ENABLE_MEMORY_MONITORING=true
MEMORY_MONITORING_INTERVAL=60

# Feature flags
ENABLE_FULL_TRANSCRIPT=false
ENABLE_ADVANCED_SUMMARIZATION=false
ENABLE_VIDEO_PREVIEW=false
